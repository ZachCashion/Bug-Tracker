@model IEnumerable<Bug_Tracker.Models.ManageRolesViewModel>
@{
    ViewBag.Title = "ManageRoles";
}

<h2>ManageRoles</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-12">
                    @Html.ListBox("UserIds", null, new {@class ="" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.DropDownList("Role", null,"--Select Role--", new {@class ="" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        }

    </div>
    <div class="col-md-6">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("User Name")
                </th>
                <th>
                    @Html.DisplayName("Role")
                </th>
                
            </tr>

            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => user.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => user.RoleName)
                    </td> 
                </tr>
            }

        </table>

    </div>
</div>