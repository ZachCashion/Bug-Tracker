@model Bug_Tracker.Models.TicketAttachment

@{
    ViewBag.Title = "Delete";
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">Delete Attachment</h6>
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Attachment</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("Submitter")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Ticket.Submiter.DisplayName)
                </dd>

                <dt>
                    @Html.DisplayName("File Name")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Summary)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Created)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Created)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FilePath)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FilePath)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            }
        </div>

    </div>
</div>