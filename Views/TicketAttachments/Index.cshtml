@using Bug_Tracker.Helpers
@model IEnumerable<Bug_Tracker.Models.TicketAttachment>

@{
    ViewBag.Title = "Index";
}

<h2>Ticket Attachments</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("File")
        </th>
        <th>
            @Html.DisplayName("Submitter")
        </th>
        <th>
            @Html.DisplayName("Ticket Title")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FilePath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@item.FilePath">
                <img src="@AttachmentHelper.GetIcon(item.FilePath)" style="width: 40px;"/>
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ticket.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FilePath)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
